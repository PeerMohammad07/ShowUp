generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  email         String       @unique
  password      String
  firstName     String?
  lastName      String?
  bio           String?
  createdAt     DateTime     @default(now())
  resolutions   Resolution[]
}

model Resolution {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  title       String
  situation   String
  task        String
  action      String
  result      String
  frequency   String    // "DAILY", "WEEKLY"
  status      String    @default("ACTIVE") // "ACTIVE", "ARCHIVED"
  reminderTime String?  // Store as "HH:MM"
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  checkIns    CheckIn[]
}

model CheckIn {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  resolutionId  String     @db.ObjectId
  date          DateTime
  status        String     // "DONE", "MISSED"
  resolution    Resolution @relation(fields: [resolutionId], references: [id])

  @@unique([resolutionId, date])
}
